<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">

        <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="261dp"
                android:layout_height="67dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="Seleccioná una categoría"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.ExpandedMenu.Item"
                android:textSize="24sp"
                android:typeface="normal"
                app:fontFamily="sans-serif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/alimentacion"
                android:layout_width="164dp"
                android:layout_height="163dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryTitle"
                app:srcCompat="@drawable/bienestar" />

        <ImageView
                android:id="@+id/bienestar"
                android:layout_width="164dp"
                android:layout_height="163dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryTitle"
                app:srcCompat="@drawable/alimentacion" />

        <ImageView
                android:id="@+id/consultaSustancia"
                android:layout_width="164dp"
                android:layout_height="163dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="12dp"
               android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/bienestar"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/consumo_de_sustancias" />

        <ImageView
                android:id="@+id/desarrolloSexual"
                android:layout_width="164dp"
                android:layout_height="163dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@id/alimentacion"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/desarrollo_sexual" />
        <ImageView
                android:id="@+id/familia"
                android:layout_width="164dp"
                android:layout_height="163dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@id/consultaSustancia"
                app:layout_constraintLeft_toLeftOf="parent"
                app:srcCompat="@drawable/habitos_del_banio"
        />
        <ImageView
                android:id="@+id/habitosSuenio"
                android:layout_width="164dp"
                android:layout_height="163dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/desarrolloSexual"
                app:srcCompat="@drawable/habitos_suenio"
        />
        <ImageView
                android:id="@+id/habitosEstudio"
                android:layout_width="164dp"
                android:layout_height="163dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@id/familia"
                app:layout_constraintLeft_toLeftOf="parent"
                app:srcCompat="@drawable/habitos_estudio"
        />
        <ImageView
                android:id="@+id/tecnologia"
                android:layout_width="164dp"
                android:layout_height="163dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/tecnologia"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/habitosSuenio"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>